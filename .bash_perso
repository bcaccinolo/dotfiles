__git_ps1 ()
{
    local b="$(git symbolic-ref HEAD 2>/dev/null)";
    if [ -n "$b" ]; then
        printf "(%s)" "${b##refs/heads/}";
    fi
}


PS1_BASE='======================================================\n[LOCAL $(__git_ps1 "(%s)")]> \w  \nâ†’ '
PS1=$PS1_BASE


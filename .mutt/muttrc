
source ~/.mutt/colors

# Change the following line to a different editor you prefer.
set editor = "vim"
set pager_stop  # don't go to next message automatically


#
# setting the order of the headers displayed
ignore *
unhdr_order *
unignore  Date: From: Reply-To: Mail-Followup-To: To: Cc: Subject:
hdr_order Date: From: Reply-To: Mail-Followup-To: To: Cc: Subject:
# unignore  User-Agent: X-Mailer: X-Newsreader: Message-Id:
# hdr_order User-Agent: X-Mailer: X-Newsreader: Message-Id:
# unignore  X-Signatur X-Spam-Status:
# hdr_order X-Signatur X-Spam-Status:

# ignore "Authentication-Results:"
# ignore "DomainKey-Signature:"
# ignore "DKIM-Signature:"
# ignore "X-Mailer:"
# ignore "X-Google-DKIM-Signature:"
# ignore "DKIM-Signature:"

hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html
bind editor <Tab> complete-query
bind editor ^T complete
bind editor <space> noop

bind generic ]    half-down         # scroll down 1/2 page
bind generic [    half-up           # scroll up 1/2 page
bind pager ]      half-up                 # move up one-half page
bind pager [     half-down              # move down one-half page

# Gmail-style keyboard shortcuts
macro index,pager y "<save-message>=[Gmail]/All Mail<enter><enter>" "Archive"
# macro index,pager d "<save-message>=[Gmail]/Trash<enter><refresh>" "Trash"

macro index,pager gi "<change-folder>=INBOX<enter>" "Go to inbox"
# macro index,pager ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index,pager gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"
macro index,pager gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"

# Accounts
folder-hook 'perso' 'source ~/.mutt/account.gmail.perso'
folder-hook 'pro' 'source ~/.mutt/account.gmail.pro'
# switch to default account on startup
source ~/.mutt/account.gmail.perso
macro index <F11> '<sync-mailbox><enter-command>source ~/.mutt/account.gmail.perso<enter><change-folder>!<enter>'
macro index <F12> '<sync-mailbox><enter-command>source ~/.mutt/account.gmail.pro<enter><change-folder>!<enter>'


set sort = 'last-date-received'
set sort_aux = 'threads'
set auto_tag = yes

# Index Key Bindings ---------------------------------
bind index gg       first-entry
bind index G        last-entry
bind index,pager R  group-reply

# Sidebar Patch --------------------------------------
set sidebar_delim   = 'â”‚'
set sidebar_visible = yes
set sidebar_width   = 24
color sidebar_new color221 color233
# color sidebar_new yellow default

# Sidebar Navigation ---------------------------------
bind index,pager <down>   sidebar-next
bind index,pager <up>     sidebar-prev
bind index,pager <right>  sidebar-open

# set index_format = "%4C %Z %{%b %d %R} %-25.25L %s"
set index_format = " %Z %{%b %d %R} %-25.25L %s"

macro index     .i      "l((~N|~O|~F)!~D)|(~d<1w!~Q)\n" # shows the new/old/flagged but undeleted messages, and those that arrived
                                                        # in the last week but have not yet been replied to. ... i.e. what I should look at first.
macro index     .n      "l~N\n"                         # shows all new unread messages
macro index     .o      "l(~N|~O)\n"                    # shows all new and old unread messages
macro index     .a      "l~A\n"                         # shows all messages (resets the limit fiter)
macro index     .t      "l~d<1d\n"                      # shows today's messages
macro index     .y      "l~d<2d ~d>1d\n"                # shows yesterday's messages

#Ask before quitting, but default to yes
set quit=ask-yes

# wrapping lines
set wrapmargin=`echo $(( $(tput cols) - 100 ))`

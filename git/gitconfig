[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log  --decorate=short --stat
  who = shortlog -s --
  undo = reset --hard
  cp = cherry-pick

[core]
  pager = less -r
  editor = code --wait
  excludesfile = /Users/benoit/.gitignore

[branch]
  # prefer rebase when pulling modifications from remote
  autosetuprebase = always

[color]
  branch = auto
  diff = auto
  status = auto
  log = auto

[color "branch"]
  current = yellow reverse
  local = blue
  remote = green

[color "diff"]
  meta = magenta bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
  default = simple

[pull]
  rebase = true

[tig]
 show-date = short
 author-width = 10


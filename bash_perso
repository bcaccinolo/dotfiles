# . ~/.bashrc_perso

# encoding unification
export LC_ALL=en_US.utf-8
export LANG="$LC_ALL"

export SVN_EDITOR=code
export EDITOR=code

export HISTSIZE=10000

__git_ps1 ()
{
    local b="$(git symbolic-ref HEAD 2>/dev/null)";
    if [ -n "$b" ]; then
        printf "(%s)" "${b##refs/heads/}";
    fi
}


PS1_BASE='======================================================\n[LOCAL $(__git_ps1 "(%s)")]> \w  \nâ†’ '
PS1=$PS1_BASE

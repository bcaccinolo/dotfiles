# . ~/.shell_aliases

# commons
alias bat='batcat --theme "Sublime Snazzy" '
alias batt='batcat --theme "GitHub" '
alias open='xdg-open '
alias c='cd .. ; ls'
alias a='ack '
alias xx='exit'
alias aa='setxkbmap -layout us -variant colemak -option ctrl:nocaps ; xmodmap ~/dev/dotfiles/xmodmap/dot-Xmodmap ; exit'

# ls aliases
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'

# Emacs
alias em='emacsclient -cn'

# GIT aliases : check Zsh git plugin - https://github.com/robbyrussell/oh-my-zsh/wiki/Plugin:git


[color]
  branch = auto
  diff = auto
  status = auto
  log = auto

[color "branch"]
  current = yellow reverse
  local = blue
  remote = green

[color "diff"]
  meta = magenta bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan


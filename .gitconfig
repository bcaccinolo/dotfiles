
[alias]
   co = checkout
   st = status
   ci = commit
   undo = reset --hard
   br = branch
   df = diff --color
   lg = log -p
   who = shortlog -s --

[user]
	name = Benoit Caccinolo
	email = benoit.caccinolo@gmail.com

[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan

